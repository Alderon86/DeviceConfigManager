<!DOCTYPE html="{{locale}}">
    {{> header}}
    <body>
        {{> navbar}}
        <br>
        <h1 align="center">{{title}}'s Device Logs!</h1>
        <br>
        <div style="width:90%; margin-left:calc(5%);">
            <a href="/logs/delete_all" role="button" style="float: right;" class="btn btn-danger">Delete All</a>
            <br><br>
            <table id="table" class="table table-striped table-bordered dt-responsive nowrap" style="position: center; width:100%">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>UUID</th>
                    <th>Model</th>
                    <th>Message</th>
                    <th width="5%"></th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <br>
    </body>
</html>

<script>
    $(document).ready(function() {
        const table = $('#table').DataTable( {
            "ajax": {
                "url": "/api/logs",
                "dataSrc": "data.logs"
            },
            "paging":   true,
            "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
            "columns": [
                { "data": "date" },
                { "data": "uuid" },
                { "data": "model" },
                { "data": "message" },
                { "data": "buttons" }
            ],
            "info":     true,
            "order": [[ 0, "desc" ]],
            "search.caseInsensitive": true,
            "columnDefs": [ {
                "targets": [4],
                "orderable": false
            }],
            "responsive": true
        });
        $('#table').on( 'draw.dt', function () {
            setTimeout( function () {
                table.ajax.reload(null, false);
            }, 5000);
        } );
    } );
</script>
